@model TurnipExchange.Data.SaleOffer

@{
    ViewData["Title"] = "Create";
}

<h1>Offer</h1>
<hr />

<div class="alert alert-primary" role="alert">
    Please only create an offer as long as your gates are open to visitors.
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DodoCode" class="control-label"></label>
                <input asp-for="DodoCode" class="form-control" />
                <span asp-validation-for="DodoCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea  asp-for="Description" class="form-control" rows="3" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



